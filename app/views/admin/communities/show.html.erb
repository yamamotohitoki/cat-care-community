<div class="container mt-5">
  <div class="card">
    <div class="row">
      <div class="col-12">
        <%= image_tag @community.image, style: 'width: 100%; height: 200px;' %>
      </div>
    </div>
    <div class="d-flex bd-highlight mt-3">
      <div class="p-2 bd-highlight"><h4><%= @community.title %></h4><hr></div>
      <div class="ml-auto p-2 bd-highlight"><%= link_to '参加する', root_path, class: 'btn btn-primary' %></div>
    </div>
    <p class="text-break"><%= @community.body %></p>
  </div>
</div>


