
<div class="container mt-3">

  <h4 class="mb-5"><%= @member.name %>さんの会員情報</h4>
  <div class="row mb-3">
    <h5 class="mb-3 ml-3">会員ID</h5>
    <p class="pl-2"><%= @member.id %></p>
  </div>
  <%= form_with model: [:admin, @member] do |f| %>
    <div class="row mb-3">
      <%= f.label "ニックネーム", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :name, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :introduction, "自己紹介", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :introduction, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :email , "メールアドレス", class: "col-lg-2 col-md-3 col-sm-4 mb-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3 col-md-3 mx-2" %>
    </div>
    <div class="row">
      <h5 class="font-weight-bold ml-3 mr-3">会員ステータス</h5>
      <%= f.radio_button :is_active, :true, class: "mr-2" %>
      <%= f.label :is_active, "有効", value: true, class: "text-success mr-2" %>

      <%= f.radio_button :is_active, :false, class: "mr-2" %>
      <%= f.label :is_active, "退会", value: false, class: "text-danger mr-2" %>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit "変更を保存", class:"btn btn-outline-primary mb-3" %>
    </div>
  <% end %>
</div>