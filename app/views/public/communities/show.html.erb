<div class="container mt-3">
  <div class="card">
   <%= image_tag @community.image, style: 'width:100%; height:200px;' %>
    <div class="card-body">
      <h5 class="card-title"><%= @community.title %></h5>
      <p class="card-text"><%= @community.body %></p>
    </div>
  </div>
  <div class="card">
    <div class="card-header">
     ルール
    </div>
    <div class="card-body">
      <blockquote class="blockquote">
        <p><%= @community.rule %></p>
    </div>
  </div>
      <div class="card mt-5" style="width: 18rem;">
        <div class="card-header">
          トピック一覧
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <% @topics.each do |topic| %>
              <%= link_to topic.title, community_topic_path(topic) %>
              <%= image_tag topic.image, size: "50x50 rounded-circle" %>
           <% end %>
          </li>

        </ul>

      </div>
      <%= link_to new_community_topic_path(@community), class: "btn btn-outline-info mt-3" do %>
          新しいトピックを作成する
        <% end %>
  </div>






