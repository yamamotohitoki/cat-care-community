<%= render 'profile', member: @member, cats: @cats, blogs: @blogs %>

<div class="container mt-5">
  <%= form_with(model: @member, url: update_mypage_path(@member), method: :patch, html: { class: "form-horizontal" }) do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading">プロフィール編集</div>
      <div class="panel-body">
        <div class="form-group">
          <%= f.label :name, class: "col-sm-2 control-label" do %>
            ニックネーム
          <% end %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "8文字以内" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :introduction, class: "col-sm-2 control-label" do %>
            自己紹介
          <% end %>
          <div class="col-sm-10">
            <%= f.text_area :introduction, class: "form-control", placeholder: "140文字以内" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, class: "col-sm-2 control-label" do %>
            アイコンを設定する
          <% end %>
          <div class="col-sm-10">
            <%= f.file_field :profile_image, class: "form-control-file" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit '更新する', class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
