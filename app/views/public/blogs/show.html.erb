<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @blog.title %></h1>
      <div class="rounded-circle">
        <%= image_tag @blog.image, size: "100x100" if @blog.image.attached? %>
      </div>
      <p><%= @blog.body %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h2>コメント</h2>
      <% @blog.blog_comments.each do |comment| %>
        <p><%= comment.comment %></p>
      <% end %>

      <%= form_with(model: BlogComment.new, url: blog_blog_comments_path(@blog), method: :post) do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, placeholder: 'コメントを入力してください', class: 'form-control' %>
        </div>
        <%= f.submit 'コメントする', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
