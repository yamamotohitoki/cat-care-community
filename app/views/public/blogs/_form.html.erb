<div class="row">
  <div class="col-md-3 offset-md-9">
    <%= form_with(model: blog, url: blogs_path, method: :post, local: true, multipart: true, class: "form") do |f| %>
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
      </div>

      <div class="form-group">
        <%= f.label :body, '内容' %>
        <%= f.text_area :body, class: "form-control", placeholder: "内容を入力してください", rows: 3 %>
      </div>

      <div class="form-group">
        <%= f.label :image, 'イメージ' %>
        <%= f.file_field :image, class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label :status, 'ステータス' %>
        <%= f.select :status, Blog.statuses.keys, {}, class: "form-control" %>
      </div>

      <%= f.submit '保存', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
