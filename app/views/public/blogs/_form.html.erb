
<h1 class="text-center">ブログ投稿フォーム</h1>
<%= form_with(model: blog, url: blogs_path, method: :post, local: true, multipart: true, class: "form") do |f| %>
 <%= render "public/shared/error_messages", resource: f.object %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
  </div>

  <div class="form-group">
    <%= f.label :body, '内容' %>
    <%= f.text_area :body, class: "form-control", placeholder: "内容を入力してください", rows: 3 %>
  </div>

  <div class="form-group">
    <%= f.label :image, '投稿写真' %>
    <%= f.file_field :image, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.label :status, '設定' %>
    <div class="form-check form-check-inline">
      <%= f.radio_button :status, 'public', class: "form-check-input", checked: true %>
      <%= label_tag 'blog_status_public', I18n.t('enums.blog.status.public'), class: "form-check-label" %>
    </div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :status, 'private', class: "form-check-input" %>
      <%= label_tag 'blog_status_private', I18n.t('enums.blog.status.private'), class: "form-check-label" %>
    </div>
  </div>

  <%= f.submit '投稿する', class: "btn btn-primary mb-3" %>
<% end %>
