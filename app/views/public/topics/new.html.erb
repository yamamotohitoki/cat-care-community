<%= render 'public/communities/main', community: @community %>

<div class="container mt-5">
  <h2>トピック作成フォーム</h1>
<%= form_with model: @topic, url: community_topics_path(@community), method: :post do |form| %>
  <div class="form-group">
    <%= form.label :タイトル, class: "control-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :詳細, class: "control-label" %>
    <%= form.text_area :body, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :写真, class: "control-label" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>
  <%= form.hidden_field :community_id, value: @community.id %>
  <div class="form-actions text-center mb-5">
    <%= form.submit "トピックを作成する", class: "btn btn-outline-primary" %>
  </div>
<% end %>
</div>
