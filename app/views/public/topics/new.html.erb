<div class="container">
  <h1 class="text-center">トピック作成フォーム</h1>
<%= form_with(model: [@community, @topic], url: community_topics_path(@community), method: :post, html: { class: "form" }) do |form| %>
  <div class="form-group">
    <%= form.label :タイトル, class: "control-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :詳細, class: "control-label" %>
    <%= form.text_area :body, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :写真, class: "control-label" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>

  <div class="form-actions text-center">
    <%= form.submit "トピックを作成する", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
